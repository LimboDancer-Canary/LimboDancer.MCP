{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "<TENANT_ID>",
    "ClientId": "<CLIENT_APP_ID>",
    "ClientSecret": "<CLIENT_SECRET>",
    "CallbackPath": "/signin-oidc"
  },
  "DownstreamApi": {
    "McpApi": {
      "BaseUrl": "https://localhost:7056",
      "Scopes": [ "api://<API_CLIENT_ID>/Mcp.Access" ]
    }
  },
  "Persistence": {
    "ConnectionString": "Host=localhost;Port=5432;Database=limbodancer_dev;Username=postgres;Password=postgres"
  },
  "Search": {
    "Endpoint": "https://<your-service>.search.windows.net",
    "ApiKey": "<admin-key>",
    "Index": "ldm-memory"
  },
  "CosmosGremlin": {
    "Host": "<account>.gremlin.cosmos.azure.com",
    "Port": 443,
    "EnableSsl": true,
    "Database": "limbodancer",
    "Graph": "history_memory_graph",
    "AuthKey": "<primary-key>",
    "ConnectionPoolSize": 8,
    "Serializer": "GraphSON2"
  },
  "OntologyApi": {
    "BaseUrl": "http://localhost:5179",
    "TenantHeaderName": "X-Tenant-Id",
    "TimeoutSeconds": 10
  },
  "AllowedHosts": "*"
}
